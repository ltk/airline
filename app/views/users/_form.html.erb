<li><%= f.file_field :avatar %></li>
<li><%= f.input :first_name %></li>
<li><%= f.input :last_name %></li>

<% if f.object.company_id.nil? %>
  <li><%= f.association :company, :label => 'Choose Your Company' %> or <%= link_to_add_association 'Add a New Company', f, :company %></li>
<% end %>

<li><%= f.input :email %></li>
<li><%= f.input :password %></li>
<li><%= f.input :password_confirmation %></li>