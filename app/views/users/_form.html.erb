<%= f.file_field :avatar, :label => 'Upload an Avatar Image' %>
<%= f.input :first_name %>
<%= f.input :last_name %>

<% if f.object.company_id %>
  <span class="company-name">Company: <%= f.object.company_name %></span>
<% else %>
  <div class="company-fields"><%= f.association :company, :label => 'Choose Your Company' %> or <%= link_to_add_association 'Add a New Company', f, :company %></div>
<% end %>

<% if f.object.company_id && !f.object.persisted? %>
  <%= f.input :company_id, :as => :hidden, :value => f.object.company_id %>
<% end %>

<%= f.input :email %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
